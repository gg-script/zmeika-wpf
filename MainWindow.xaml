<Window x:Class="SnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Змейка" Height="600" Width="800"
        Background="#1e1e1e"
        KeyDown="Window_KeyDown"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="#2d2d2d" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Счёт: " FontSize="20" Foreground="White" Margin="0,0,5,0"/>
                <TextBlock x:Name="ScoreText" Text="0" FontSize="20" Foreground="#4ec9b0" FontWeight="Bold"/>
                <TextBlock Text=" | Рекорд: " FontSize="20" Foreground="White" Margin="20,0,5,0"/>
                <TextBlock x:Name="HighScoreText" Text="0" FontSize="20" Foreground="#ce9178" FontWeight="Bold"/>
            </StackPanel>
        </Border>
        
        <Canvas x:Name="GameCanvas" Grid.Row="1" Background="#0e0e0e"/>
        
        <Border x:Name="GameOverPanel" Grid.Row="1" Background="#80000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ИГРА ОКОНЧЕНА" FontSize="48" Foreground="#d16969" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock x:Name="FinalScoreText" FontSize="24" Foreground="White" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                <Button Content="НОВАЯ ИГРА" FontSize="20" Padding="30,10" Margin="0,30,0,0" 
                        Background="#4ec9b0" Foreground="White" BorderThickness="0"
                        Click="RestartButton_Click" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
